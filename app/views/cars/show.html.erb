<div class="card-trip">
  <h1><%=@car.manufacturer + " " + @car.model%></h1>
        <% if @car.photo.key %>
          <%= cl_image_tag @car.photo.key %>
        <% else%>
          <img src="https://source.unsplash.com/random/500×300/?car" alt="car" width="600 px">
        <%end%>
  <div class="card-trip-infos">
    <div>
      <p>Make: <%= @car.manufacturer.upcase%></p>
      <p>Model: <%= @car.model %></p>
      <p>Year: <%= @car.year %></p>
      <p>Category: <%= @car.category %></p>
      <p>Daily Price: £<%= @car.day_price %></p>
    </div>
    <h2 class="card-trip-pricing"><%= @car.day_price %></h2>
  </div>
</div>


  <%if current_user == @car.user%>
    <%=link_to "Edit this car", edit_car_path %>
    <%= link_to "Remove your car listing", car_path(@car), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  <%else%>
    <%=link_to "Book this car", new_car_booking_path(@car), class: "btn btn-primary" %>
  <%end%>

   <%if current_user == @car.user%>
     <%@bookings.each do |booking| %>
      <ul>
        <li><%=booking.total_price%></li>
        <li><%=booking.start_date%></li>
        <li><%=booking.end_date%></li>
      </ul>
      <%end %>
   <%end%>
<%=link_to "Book this car", new_car_booking_path(@car), class: "btn btn-primary" %>
  <br>
  <br>
  <br>
  <%=link_to "Back to car list", cars_path%>
