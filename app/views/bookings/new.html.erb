<div class="p-3">
 <div style="min-height: calc(100vh - 100px - 56px)">
  <div class="container">
   <div class="form-row d-flex justify-content-center">
    <%= simple_form_for [@car, @booking] do |f| %>
    <div data-action="change->price#submitDate">
       <%= f.input :start_date, html5: true, input_html: {"data-price-target": "start"} %>
    </div>
    <div data-action="change->price#submitEndDate">
      <%= f.input  :end_date, html5: true, input_html: {data: {target: "end_date"}} %>
    </div>
      <%= f.input :total_price, html5: true, input_html: {"data-price-target": "money", class:"d-none"}, label:false%>
      <%= f.submit "Submit booking", class: "btn btn-primary" %>
    <% end %>
  </div>


 <div class="alert alert-primary" role="alert">
  <div class="h4">
    <p >Price per day:
      £<span data-price-target="daily"><%= @car.day_price %></span>
    </p>
    <p>Total price:
      £ <span id="totalprice"> 0</span>
  </p>
  </div>
</div>


</div>
